    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/debug/gbemu",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build debug"
        },
        {
            "name": "Debug tests GDB",
            "type": "cppdbg",
