{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "premake gmake",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "premake5",
            "args": [
                "gmake"
            ]
        },
        {
            "label": "Build debug",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "make",
            "args": [
                "-C",
                "build",
                "gbemu",
                "config=debug",
                "-j8"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/src"
                ]
            },
            "dependsOn": "premake gmake"
        },
        {
            "label": "Build release",
            "type": "shell",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "make",
            "args": [
                "-C",
                "build",
                "gbemu",
                "config=release",
                "-j8"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/src"
                ]
            },
            "dependsOn": "premake gmake"
        },
        {
            "label": "Build tests",
            "type": "shell",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "make",
            "args": [
                "-C",
                "build",
                "gbemu-tests",
                "config=debug",
                "-j8"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/src"
                ]
            },
            "dependsOn": "premake gmake"
        },
        {
			"label": "Build and run tests",
			"type": "process",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "Build tests",
			"command": "${workspaceFolder}/build/bin/debug/gbemu-tests",
			"problemMatcher": []
		},
        {
            "label": "Cleanall",
            "type": "shell",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "problemMatcher": []
        }
    ]
}